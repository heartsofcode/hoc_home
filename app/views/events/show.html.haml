%p#notice= notice

%p
  %h1
    = @event.name
%p
  - if @event.location_url?
    %a{:href => @event.location_url}
      = @event.location
  - else
    = @event.location
%p
  - if @event.recurring?
    = @event.rule.to_s
  - else
    %b
      = prettify(@event)[0]
  um
  %b
    = prettify(@event)[1]

  - if prettify(@event)[0] == prettify(@event)[2]
    bis

  - else
    bis
    %b
      = prettify(@event)[2]
    um
  %b
    = prettify(@event)[3]
%p
  = @event.description
%p
  %b
  = @event.calendar.name

- if user_signed_in?
  = link_to 'Edit', edit_event_path
  \|
  = link_to "Delete", event_path(@event), method: :delete
  %br
= link_to 'All Events', events_path
