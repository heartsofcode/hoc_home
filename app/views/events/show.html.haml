%p#notice= notice

%p
  %h1
    = @event.name
%p
  - if @event.location_url?
    %a{:href => @event.location_url}
      = @event.location
  - else
    = @event.location
%p
  %b
    = prettify(@event)[0]
  um
  %b
    = prettify(@event)[1]

  - if prettify(@event)[0] == prettify(@event)[2]
    bis

  - else
    bis
    %b
      = prettify(@event)[2]
    um
  %b
    = prettify(@event)[3]
- if @event.recurring?
  = @event.rule.to_s
%p
  = @event.description
%p
  %b
  = @event.calendar.name

- if user_signed_in?
  = link_to 'Edit', edit_event_path
  %br
  = link_to "Delete All Events", event_path(@event), method: :delete
  \|
  = link_to "Delete Just This Event", event_exceptions_path(@event, event_exception: {time: @time}), method: :post
  %br
= link_to 'All Events', events_path
